<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/adminStyle.css"> 
    <title>Admin Dashboard</title>
</head>
<body>
    <header>
        <div class="logo">
            <img src="/img/logo4.png" alt="logo">
        </div>
        <button class="logout" onclick="location.href='/logout'" style="float: right;">Logout</button>
    </header>

    <div class="table-container">
        <div class="welcome">
            <h1>Welcome to the Admin Dashboard</h1>
            <h2>This is your Reviews Data</h2>
        </div> 
        <div class="top">
            <div class="dropdown">
                <button class="dropbtn">Menu</button>
                    <div class="dropdown-content">
                        <a href="/admin">Users</a>
                        <a href="/admin/review">Review</a>
                    </div>
                </div>
            <div class="search-container">
                <input type="text" id="searchInput" placeholder="Search review...">
            </div>  
        </div>    
            <table>
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Subject</th>
                        <th>Message</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% review.forEach(function(review, index) { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= review.name %></td>
                            <td><%= review.email %></td>
                            <td><%= review.subject %></td>
                            <td><%= review.message %></td>
                            <td style="text-align: center;">
                                <form action="/admin/review/edit/<%= review._id %>" method="get" style="display:inline">
                                    <button type="submit">Edit</button>
                                </form>
                                <form action="/admin/review/delete/<%= review._id %>" method="post" onsubmit="return confirm('Are you sure?');" style="display: inline;">
                                    <button class="delete" type="submit">Delete</button>
                                </form>                                
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <br>
    </div>
    <div class="add">  
            <button class="add" onclick="location.href='/admin/review/add'">Add Review</button>
    </div>

    <footer>
        <p>Â© 2024 MEMORA. All rights reserved.</p>
    </footer>
    
    <script src="/js/adminFunctions.js"></script>
</body>
</html>
